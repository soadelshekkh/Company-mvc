@model IEnumerable<EmployeeViewModel>
@{
    ViewData["Title"] = "Index";
}


<a class="btn btn-info" asp-controller="Employee" asp-action="Create">Create New Employee</a>
<br />
<br />
<form asp-action="Index">
    <div class="row  justify-content-end  ">
    <input class="form-control col-8 m-2" name="Name" />
    <input type="submit" class="btn btn-primary col-2 m-2" value="Search"/>
    </div>
</form>
@if(Model.Count() > 0){
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Age</th>
            <th>salary</th>
            <th>Email</th>
            <th>Image</th>
            <th>phone Number</th>
            <th>Hirring Date</th>
            <th>Address</th>
            <th>Manager</th>
            <th>Department Name</th>
            <th>Details</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var Employee in Model)
        {
            <tr>
                <td>@Html.DisplayFor(M => Employee.Name)</td>
                <td>@Html.DisplayFor(M => Employee.Age)</td>
                <td>@Html.DisplayFor(M => Employee.salary)</td>
                <td>@Html.DisplayFor(M => Employee.Email)</td>
                    <td><img src="~/Files/imges/@Employee.ImageName" class="img-fluid" alt="Employee Photo"> </td>
                <td>@Html.DisplayFor(M =>Employee.phoneNumber )</td>
                <td>@Html.DisplayFor(M =>Employee.HirringDate)</td>
                <td>@Html.DisplayFor(M =>Employee.Address)</td>
                <td>Manger</td>
                <td>@Html.DisplayFor(M =>Employee.department.DName)</td>
                <partial name="ButtonsPartialViews" model="@Employee.Id.ToString()">
            </tr>
        }
    </tbody>
</table>
}else{
    <div class="btn btn-light">No Employees Exist</div>
}


